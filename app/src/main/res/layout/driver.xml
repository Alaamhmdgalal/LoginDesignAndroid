<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linear_zone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0F9A45"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Nearest driver found, will reach in 01:00 min"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginHorizontal="36dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_zone"
        app:layout_constraintEnd_toStartOf="@+id/profile_data"/>

    <TextView
        android:id="@+id/profile_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vindel Huskel"
        android:textColor="#0F9A45"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/profile_pic"
        app:layout_constraintTop_toBottomOf="@+id/linear_zone" />

    <TextView
        android:id="@+id/ride_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ride complete : 250 +"
        android:textColor="#3A3737"
        android:textSize="14sp"
        android:drawableStart="@drawable/verify"
        android:drawablePadding="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/profile_pic"
        app:layout_constraintTop_toBottomOf="@+id/profile_data" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(4.8)"
        android:textColor="#0F9A45"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/linear_zone"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/rating_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:textColor="#3A3737"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@+id/rating"
        app:layout_constraintEnd_toEndOf="parent"/>


    <LinearLayout
        android:id="@+id/rectangle_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ride_complete"
        app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 person"
        android:textColor="#3A3737"
        android:textSize="12sp"
        android:drawableStart="@drawable/socks"
        android:drawablePadding="5dp"/>

    <TextView
        android:id="@+id/pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet friendly"
        android:textColor="#3A3737"
        android:textSize="12sp"
        android:drawableStart="@drawable/dog"
        android:drawablePadding="5dp"
        android:layout_marginStart="75dp"/>

    <TextView
        android:id="@+id/sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound"
        android:textColor="#3A3737"
        android:textSize="12sp"
        android:drawableStart="@drawable/sound_off"
        android:drawablePadding="5dp"
        android:layout_marginStart="75dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/car_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toyota Yaris"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_layout"/>

    <TextView
        android:id="@+id/car_type_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(JDG-4565998)"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car_type"/>

    <ImageView
        android:id="@+id/text_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chat"
        android:padding="10dp"
        android:background="@drawable/green_circle"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_layout"
        app:layout_constraintEnd_toStartOf="@+id/call_icon"/>

    <ImageView
        android:id="@+id/call_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phone_call"
        android:padding="10dp"
        android:background="@drawable/green_circle"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_layout"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/cancel_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Ride"
        android:textAllCaps="false"
        android:backgroundTint="#0F9A45"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car_type_number"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>